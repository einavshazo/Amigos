@model IEnumerable<Naot_Lemida_Manage_V2.Models.YearOfStudy>

@{
    ViewBag.Title = "רשימת שנת לימוד";
}

<h2>רשימת שנת לימוד</h2>

<p>
    @Html.ActionLink("ליצור שנת לימוד חדשה", "Create", "YearOfStudies", new { }, new { @class = "viewDialog", data_dialog_title = "יצירת שנת לימודים חדשה " })
</p>

@section Scripts {
    <script>
    $(document).ready(function () {

        $.ajaxSetup({ cache: false });

        $(".viewDialog").on("click", function (e) {

            e.preventDefault();
            $("<div></div>")
                .addClass("dialog")
                .appendTo("body")
                .dialog({
                    title: $(this).attr("data-dialog-title"),
                    close: function () { $(this).remove() },
                    modal: true,
                    width: 450,
                    height: 350,
                    show:
                    {
                        effect: 'clip',
                        duration: 450
                    },
                    hide:{
                        effect: 'clip',
                        duration: 450
                    },
                    showOpt: { direction: 'up' }
                })
                .load(this.href);
        });
        $(".close").on("click", function (e) {
            e.preventDefault();
            $(this).closest(".dialog").dialog("close");
        });
    });
    </script>
<script src='@Url.Content("~/Scripts/jquery-1.10.2.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery-ui-1.11.4.min.js")' type="text/javascript"></script>
 }
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>

            @Html.ActionLink("ערוך", "Edit", "YearOfStudies", new { id = item.ID }, new { @class = "viewDialog", data_dialog_title = "עריכת שנת לימוד" }) |
            @Html.ActionLink("מחק", "Delete", "YearOfStudies", new { id = item.ID }, new { @class = "viewDialog", data_dialog_title = "מחיקת שנת לימוד " })
        </td>
    </tr>
}

</table>
